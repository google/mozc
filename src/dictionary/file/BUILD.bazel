load(
    "//:build_defs.bzl",
    "mozc_cc_library",
    "mozc_cc_test",
)

package(default_visibility = [
    "//:__subpackages__",
])

mozc_cc_library(
    name = "dictionary_file",
    srcs = ["dictionary_file.cc"],
    hdrs = ["dictionary_file.h"],
    deps = [
        ":codec_interface",
        ":section",
        "//base:logging",
        "//base:mmap",
        "@com_google_absl//absl/status",
        "@com_google_absl//absl/strings",
    ],
)

mozc_cc_library(
    name = "dictionary_file_builder",
    srcs = ["dictionary_file_builder.cc"],
    hdrs = ["dictionary_file_builder.h"],
    deps = [
        ":codec_interface",
        ":section",
        "//base:file_stream",
        "//base:logging",
        "@com_google_absl//absl/container:flat_hash_set",
        "@com_google_absl//absl/strings",
    ],
)

mozc_cc_test(
    name = "dictionary_file_test",
    size = "small",
    srcs = ["dictionary_file_test.cc"],
    requires_full_emulation = False,
    deps = [
        ":codec_factory",
        ":dictionary_file",
        ":dictionary_file_builder",
        "//base:file_util",
        "//base:logging",
        "//testing:gunit_main",
        "@com_google_absl//absl/flags:flag",
    ],
)

mozc_cc_library(
    name = "codec_interface",
    hdrs = ["codec_interface.h"],
    deps = [
        ":section",
        "//base:port",
        "@com_google_absl//absl/status",
        "@com_google_absl//absl/strings",
    ],
)

mozc_cc_library(
    name = "codec_util",
    srcs = ["codec_util.cc"],
    hdrs = ["codec_util.h"],
    deps = ["//base:logging"],
)

mozc_cc_library(
    name = "codec",
    srcs = ["codec.cc"],
    hdrs = ["codec.h"],
    deps = [
        ":codec_interface",
        ":codec_util",
        ":section",
        "//base:bits",
        "//base:hash",
        "//base:logging",
        "//base:port",
        "//base:util",
        "@com_google_absl//absl/status",
        "@com_google_absl//absl/strings",
    ],
)

mozc_cc_library(
    name = "codec_factory",
    srcs = ["codec_factory.cc"],
    hdrs = [
        "codec_factory.h",
    ],
    deps = [
        ":codec",
        ":codec_interface",
        ":codec_util",
        ":section",
        "//base:port",
        "//base:singleton",
    ],
)

mozc_cc_library(
    name = "section",
    hdrs = ["section.h"],
    visibility = ["//dictionary:__subpackages__"],
    deps = ["@com_google_absl//absl/strings"],
)

mozc_cc_test(
    name = "codec_test",
    size = "small",
    srcs = ["codec_test.cc"],
    requires_full_emulation = False,
    deps = [
        ":codec",
        ":codec_factory",
        ":codec_interface",
        ":section",
        "//base:file_stream",
        "//base:file_util",
        "//base:logging",
        "//base:util",
        "//testing:gunit_main",
        "@com_google_absl//absl/flags:flag",
        "@com_google_absl//absl/status",
        "@com_google_absl//absl/strings",
    ],
)
