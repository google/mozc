  <integer name="input_frame_fold_duration">300</integer>
  <!-- Overshoot rate for folding input frame in ppm -->
  <integer name="input_frame_fold_overshoot_rate">30000</integer>
  <!-- Overshoot duration rate for folding input frame in ppm -->
  <integer name="input_frame_fold_overshoot_duration_rate">330000</integer>
  <!-- Duration for expanding input frame -->
  <integer name="input_frame_expand_duration">500</integer>
  <!-- Overshoot rate for expanding input frame in ppm -->
  <integer name="input_frame_expand_overshoot_rate">30000</integer>
  <!-- Overshoot duration rate for expanding input frame in ppm -->
  <integer name="input_frame_expand_overshoot_duration_rate">400000</integer>
